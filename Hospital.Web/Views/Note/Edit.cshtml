@model Hospital.Application.Contracts.Notes.CreateUpdateNoteDTO

@{
    ViewData["Title"] = "Edit Note";
}

<h3>Edit Note</h3>

<div class="container">
    <div class="form-group">
        <form asp-action="Edit" asp-controller="Note" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label class="control-label">Patients</label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientList">
                    <option>-- Select Patient --</option>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="Date">Date:</label>
                <input type="text" id="Date" name="Date" value="@Model.Date" />
            </div>
            <div class="form-group mb-2">
                <label for="Mediciness">Mediciness:</label>
                <input type="text" id="Mediciness" name="Mediciness" value="@Model.Mediciness" />
            </div>

            <div class="form-group col-md-4 ">
                <button class="btn btn-success mb-2" type="submit" value="submit">Save</button>
                <a asp-action="Index" class="btn btn-info mb-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

