@model Hospital.Application.Contracts.Patients.CreateUpdatePatientDTO

@{
    ViewData["Title"] = "Edit Patient";
}

<h3>Edit Patient</h3>

<div class="container">
    <div class="form-group">
        <form asp-action="Edit" asp-controller="Patient" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />

            <div class="form-group mb-2">
                <label for="Name">Name:</label>
                <input type="text" id="Name" name="Name" value="@Model.Name" />
            </div>
            <div class="form-group mb-2">
                <label for="Gender">Gender:</label>
                <select asp-for="Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group mb-2">
                <label for="UserName">UserName:</label>
                <input type="text" id="UserName" name="UserName" value="@Model.UserName" />
            </div>
            <div class="form-group mb-2">
                <label for="Password">Password:</label>
                <input type="password" id="Password" name="Password" value="@Model.Password" />
            </div>

            <div class="form-group col-md-4 ">
                <button class="btn btn-success mb-2" type="submit" value="submit">Save</button>
                <a asp-action="Index" class="btn btn-info mb-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

