@model Hospital.Application.Contracts.Doctors.CreateUpdateDoctorDTO

@{
    ViewData["Title"] = "Edit Doctor";
}

<h3>Edit Doctor</h3>

<div class="container">
    <div class="form-group">
        <form asp-action="Edit" asp-controller="Doctor" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DoctorID" />
            <div class="form-group mb-2">
                <label for="Name">Name:</label>
                <input type="text" id="Name" name="Name" value="@Model.Name" />
            </div>
            <div class="form-group mb-2">
                <label for="Phone">Phone:</label>
                <input type="text" id="Phone" name="Phone" value="@Model.Phone" />
            </div>
            <div class="form-group col-md-4 ">
                <button class="btn btn-success mb-2" type="submit" value="submit">Save</button>
                <a asp-action="Index" class="btn btn-info mb-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
